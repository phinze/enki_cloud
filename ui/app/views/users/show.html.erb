<% set_html_title @user.name, "Users" %>
<h1><%= @user.name %></h1>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag 'login' %><br/>
<%= f.text_field :login, :disabled => true %></p>

<p><%= label_tag 'name' %><br/>
<%= f.text_field :name, :disabled => true %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email, :disabled => true %></p>

<p><%= submit_tag 'Save', :disabled => true %></p>
<% end -%>

